{
  "name": "ExternalView Codespace",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "forwardPorts": [3000],
  "postCreateCommand": "bash .devcontainer/setup-claude.sh && npm install",
  "postStartCommand": "/workspaces/externalView/startup.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss"
      ]
    }
  }
}
